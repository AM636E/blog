{% block body %}
  <div class="user-menu">
    <ul class="menu nav nav-tabs">
      <li>
        <a href="/post/add">Add post</a>
      </li>
      <li>
        <a href="/posts">See posts</a>
      </li>
      <li>
        <a href="/profile/edit">Edit profile</a>
      </li>
      <li>
        <a href="/logout">Logout</a>
      </li>
    </ul>
  </div>
  <div class="user user-posts panel panel-default">
    <div class="panel-heading">
      <h4 class="heading">Posts</h4>
    </div>
    <div class="panel-body">
      <ul>
        {% for post in posts %}
          <li>
            <a href="/post/{{ post.getId }}">
              {{ post.title }}
            </a>
          </li>
        {% else %}
        {% endfor %}
      </ul>
    </div>
  </div>
{% endblock %}

