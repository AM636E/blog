<!DOCTYPE html>
<html>
<head>
  <title>{% block title %}Index{% endblock %} | Blog</title>
  <meta charset="UTF-8"/>
  {% stylesheets 'bundles/zazblog/bootstrap/css/bootstrap.css' %}
  <link rel="stylesheet" href="{{ asset_url }}"/>
  {% endstylesheets %}
</head>
<body class="container  ">
<header class="container">
  {% block user_menu %}
    {% include 'ZazBlogBundle:Profile:menu.html.twig' %}
  {% endblock %}
  <h4>
    {% block header_wrapper %}
      {% if is_granted("IS_AUTHENTICATED_REMEMBERED") %}

        {% block header_logined %}
          Welcome, dear {{ app.user.username }}.
        {% endblock %}
      {% else %}
        {% block header_anonimous %}
          <a href="{{ path('fos_user_security_login') }}">{{ 'Login here?'|trans({}, 'FOSUserBundle') }}</a>
        {% endblock %}
      {% endif %}
    {% endblock %}
  </h4>
</header>

<section class="container content-wrapper">
  {% block content_wrapper %}
    <section class="messages">
      {% for type, messages in app.session.flashbag.all() %}
        {% for message in messages %}
          <div class="flash-{{ type }}">
            {{ message }}
          </div>
        {% endfor %}
      {% endfor %}
    </section>
    <section class="content">
      {% block fos_user_content %}
      {% endblock fos_user_content %}
    </section>
    <section class="body">
      {% block body %}
      {% endblock %}
    </section>
  {% endblock %}
</section>

</body>
</html>
